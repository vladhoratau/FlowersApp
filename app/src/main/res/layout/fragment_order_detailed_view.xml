<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="@dimen/card_paddingStart"
    android:paddingLeft="@dimen/card_paddingStart"
    android:paddingTop="@dimen/detailedView_paddingTop"
    android:paddingEnd="@dimen/button_marginEnd"
    android:paddingRight="@dimen/button_marginEnd">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/orderID"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="@dimen/card_height"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_marginBottom="@dimen/orderText_marginBottom"
        android:textSize="@dimen/order_textSize" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/orderDescription"
        android:layout_width="match_parent"
        android:layout_height="@dimen/card_height"
        android:layout_gravity="center_vertical"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/orderPrice"
        android:layout_width="match_parent"
        android:layout_height="@dimen/card_height"
        android:layout_gravity="center_vertical"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/deliverTo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/card_height"
        android:layout_gravity="center_vertical"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/status"
        android:layout_width="match_parent"
        android:layout_height="@dimen/card_height"
        android:layout_gravity="center_vertical"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/changeStatusButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>